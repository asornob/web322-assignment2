<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="UTF-8" />
  <title><%= project.title %> - Climate Solutions</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mx-auto p-8 space-y-8">
    <section class="hero bg-base-200 rounded-xl text-center p-10">
      <h1 class="text-4xl font-bold"><%= project.title %></h1>
      <p class="py-4"><%= project.intro_short %></p>
      <a class="btn" href="#" onclick="history.back();return false;">Go Back</a>
    </section>

    <section class="grid md:grid-cols-2 gap-6 items-start">
      <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded-xl shadow-lg">
      <div class="space-y-4">
        <div>
          <h2 class="text-2xl font-bold">Impact</h2>
          <p><%= project.impact %></p>
        </div>

        <div>
          <h2 class="text-2xl font-bold">Original Source</h2>
          <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-primary">
            View Full Article
          </a>
        </div>

        <div>
          <h2 class="text-2xl font-bold">Random Quote</h2>
          <blockquote id="quoteBox" class="italic opacity-80">Loading a quote...</blockquote>
        </div>
      </div>
    </section>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      try {
        const res = await fetch("https://dummyjson.com/quotes/random");
        const data = await res.json();
        document.getElementById("quoteBox").textContent = `"${data.quote}" â€” ${data.author}`;
      } catch (e) {
        document.getElementById("quoteBox").textContent = "Could not load quote.";
      }
    });
  </script>
</body>
</html>
